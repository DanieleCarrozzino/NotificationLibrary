<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:notificationLibrary="clr-namespace:NotificationLibrary">
    <!--  BooleanToBrushConverter for dark theme  -->
    <notificationLibrary:BooleanToBrushConverter
        x:Key="BooleanToBrushConverter"
        FalseValue="#222222"
        TrueValue="#2a2a2a" />
    <Style x:Key="ForegroundTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BorderBrush" Value="#3f3f3f" />
    </Style>

</ResourceDictionary>