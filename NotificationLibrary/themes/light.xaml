<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:notificationLibrary="clr-namespace:NotificationLibrary">
    <!--  BooleanToBrushConverter for dark theme  -->
    <notificationLibrary:BooleanToBrushConverter
        x:Key="BooleanToBrushConverter"
        FalseValue="#e0edf8"
        TrueValue="#e9f2fb" />

    <Style x:Key="ForegroundTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BorderBrush" Value="#7498b3" />
    </Style>
</ResourceDictionary>